<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/editCourseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="EDIT" />

            <Button
                android:id="@+id/deleteCourseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editCourseButton"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:text="DELETE" />

            <TextView
                android:id="@+id/courseSubject"
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@id/deleteCourseButton"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseNum"
                android:layout_height="match_parent"
                android:layout_width="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@id/courseSubject"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseSize"
                android:layout_height="match_parent"
                android:layout_width="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@id/courseNum"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseQuarter"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_width="125dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/courseSubject"
                android:layout_toEndOf="@id/deleteCourseButton"/>

            <TextView
                android:id="@+id/courseYear"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_width="125dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/courseNum"
                android:layout_toEndOf="@id/courseQuarter"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
