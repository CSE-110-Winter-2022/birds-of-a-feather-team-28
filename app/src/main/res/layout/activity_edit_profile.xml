<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditProfileActivity">

    <Button
        android:id="@+id/removeClassesButton"
        android:layout_width="235dp"
        android:layout_height="61dp"
        android:text="Remove Classes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editClassesButton"
        app:layout_constraintVertical_bias="0.14"
        android:onClick="onRemoveClassesButtonClicked"/>

    <Button
        android:id="@+id/editClassesButton"
        android:layout_width="235dp"
        android:layout_height="61dp"
        android:text="Edit Classes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addClassesButton"
        app:layout_constraintVertical_bias="0.091"
        android:onClick="onEditClassesButtonClicked"/>

    <Button
        android:id="@+id/addClassesButton"
        android:layout_width="235dp"
        android:layout_height="61dp"
        android:layout_marginBottom="276dp"
        android:text="Add Classes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewClassesButton"
        app:layout_constraintVertical_bias="0.714"
        android:onClick="onAddClassesButtonClicked"/>

    <Button
        android:id="@+id/viewClassesButton"
        android:layout_width="235dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:text="View Classes ?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        app:layout_constraintVertical_bias="0.054"
        android:onClick="onViewClassesButtonClicked"/>

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="188dp"
        android:layout_height="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="233dp"
        android:layout_height="32dp"
        android:text="Name Lastname"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/addClassesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        app:layout_constraintVertical_bias="0.082"
        android:gravity="center" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilePicture"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        android:onClick="onHomeButtonClicked"/>

</androidx.constraintlayout.widget.ConstraintLayout>